<UserControl x:Class="Farplane.FFX2.EditorPanels.EquipmentPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Farplane.FFX2.EditorPanels"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <GroupBox Header="Equipment">
        <StackPanel>
        <GroupBox Header="Garment Grid">
                <ComboBox Name="GarmentGrid" SelectedIndex="0" />
            </GroupBox>
        <GroupBox Header="Dressphere">
                <ComboBox Name="Dressphere" SelectedIndex="0" />
        </GroupBox>
        <GroupBox Header="Accessories">
<StackPanel>
                    <ComboBox Name="Accessory1" SelectedIndex="0" />
                    <ComboBox Name="Accessory2" SelectedIndex="0" />
                </StackPanel>
        </GroupBox>
        </StackPanel>
    </GroupBox>
</UserControl>
