<UserControl x:Class="Farplane.FFX2.EditorPanels.GarmentGridEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Farplane.FFX2.EditorPanels"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <GroupBox Header="Garment Grids" Margin="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <ScrollViewer Padding="2">
                <StackPanel Name="GarmentGridList" />
            </ScrollViewer>
            <Button Grid.Row="1" Margin="2" Content="Give All Garment Grids" Click="GiveAllGrids_Click"/>
        </Grid>
        
    </GroupBox>
</UserControl>
