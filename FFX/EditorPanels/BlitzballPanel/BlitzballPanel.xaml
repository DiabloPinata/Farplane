<UserControl x:Class="Farplane.FFX.EditorPanels.BlitzballPanel.BlitzballPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Farplane.FFX.EditorPanels.BlitzballPanel"
             mc:Ignorable="d" 
             d:DesignHeight="510" d:DesignWidth="480">
    <GroupBox Header="Blitzball">
        <TabControl>
            <TabItem Header="Players">
                <local:BlitzballPlayerEditor x:Name="PlayerEditor"/>
            </TabItem>
            <TabItem Header="Teams">
                <local:BlitzballTeamEditor x:Name="TeamEditor"/>
            </TabItem>
            <TabItem Header="Current Match" Visibility="Collapsed">
                <local:BlitzballMatchPanel x:Name="MatchEditor" />
            </TabItem>
        </TabControl>
    </GroupBox>
</UserControl>
