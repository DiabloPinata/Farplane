<UserControl x:Class="Farplane.FFX.EditorPanels.Items.ItemsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Farplane.FFX.EditorPanels.Items"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <GroupBox Header="Items">
        <TabControl>
            <TabItem Header="Items">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20"/>
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">Entering or exiting the items menu in-game will refresh your items</TextBlock>
                    <ContentControl Grid.Row="1" Name="TabItems" />
                </Grid>
                
            </TabItem>
            <TabItem Header="Key Items" Name="TabKeyItems"/>
        </TabControl>
    </GroupBox>
</UserControl>
