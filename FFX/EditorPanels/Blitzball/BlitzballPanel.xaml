             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Farplane.FFX.EditorPanels.Blitzball"
             mc:Ignorable="d" 
             d:DesignHeight="510" d:DesignWidth="480">
    <GroupBox Header="Blitzball">
        <TabControl>
            <TabItem Header="Players">
                <Grid>
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">Sorry, the Player Editor is not yet implemented</TextBlock>
                </Grid>
            </TabItem>
            <TabItem Header="Teams">
                <Grid>
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">Sorry, the team editor is not yet implemented</TextBlock>
                </Grid>
            </TabItem>
            <TabItem Header="Current Match">
                <local:BlitzballMatchPanel />
